{
    "name": "nestjs-hexa",
    "title": "NestJS hexagonal Boilerplate (TypeORM)",
    "version": "0.0.10",
    "description": "Boilerplate for NestJS (TypeScript) to make an http service with hexagonal arch.",
    "author": {
        "name": "Felipe Buccioni",
        "email": "felipe.buccioni@gmail.com"
    },
    "contributors": [
        {
            "name": "Moeid Heidari",
            "url": "https://moeidheidari.com/"
        }
    ],
    "private": true,
    "license": "Apache",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:ci": "jest --ci --detectOpenHandles --forceExit",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm": "sh -c 'ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js \"$0\" -d src/infrastructure/database/typeorm.datasource.ts \"$@\"'",
        "migration:create": "sh -c 'npx typeorm migration:create \"src/infrastructure/database/migrations/$0\" \"$@\"'",
        "migration:generate": "sh -c 'npm run typeorm -- migration:generate \"src/infrastructure/database/migrations/$0\" \"$@\"'",
        "migration:run": "npm run typeorm -- migration:run",
        "migration:revert": "npm run typeorm -- migration:revert"
    },
    "dependencies": {
        "@aequum/nestjs-authn": "rc",
        "@aequum/nestjs-common": "rc",
        "@aequum/nestjs-exceptions": "rc",
        "@aequum/utils": "rc",
        "@fastify/cors": "^11.0.1",
        "@fastify/static": "^7.0.0",
        "@nestjs/axios": "^3.1.3",
        "@nestjs/cache-manager": "^2.3.0",
        "@nestjs/common": "^10.4.13",
        "@nestjs/config": "^3.3.0",
        "@nestjs/core": "^10.4.13",
        "@nestjs/jwt": "^10.2.0",
        "@nestjs/mapped-types": "^2.0.6",
        "@nestjs/passport": "^10.0.3",
        "@nestjs/platform-fastify": "^10.4.13",
        "@nestjs/swagger": "^8.1.0",
        "@nestjs/terminus": "^10.2.3",
        "@nestjs/typeorm": "^10.0.2",
        "@willsoto/nestjs-prometheus": "^6.0.1",
        "async-mutex": "^0.5.0",
        "axios": "^1.7.9",
        "bcrypt": "^5.1.1",
        "cache-manager": "^5.7.6",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "dotenv": "^16.4.7",
        "dotenv-expand": "^12.0.1",
        "dotenv-flow": "^4.1.0",
        "fastify": "^5.2.0",
        "morgan": "^1.10.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "prom-client": "^15.1.3",
        "reflect-metadata": "^0.2.2",
        "rimraf": "^6.0.1",
        "rxjs": "^7.8.1",
        "ts-node": "^10.9.2",
        "typeorm": "^0.3.20"
    },
    "devDependencies": {
        "@nestjs/cli": "^10.4.8",
        "@nestjs/schematics": "^10.2.3",
        "@nestjs/testing": "^10.4.13",
        "@swc/cli": "^0.5.2",
        "@swc/core": "^1.10.0",
        "@swc/jest": "^0.2.37",
        "@types/bcrypt": "^5.0.2",
        "@types/dotenv-flow": "^3.3.3",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.10.1",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.16.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-import-resolver-typescript": "^3.8.3",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-prettier": "^5.2.1",
        "globals": "^16.0.0",
        "jest": "^29.7.0",
        "prettier": "^3.4.2",
        "source-map-support": "^0.5.21",
        "supertest": "^7.0.0",
        "swagger-ui-express": "^5.0.1",
        "ts-jest": "^29.2.5",
        "ts-loader": "^9.5.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.29.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": [
                "@swc/jest"
            ]
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    },
    "pnpm": {
        "onlyBuiltDependencies": [
            "bcrypt"
        ]
    }
}
